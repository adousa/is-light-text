{
  "name": "black-or-white-text",
  "version": "1.0.0",
  "description": "Determines whether to use black or white text on a given background color for optimal readability",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "color",
    "contrast",
    "accessibility",
    "text-color",
    "background",
    "black",
    "white",
    "readability",
    "a11y",
    "rgb"
  ],
  "license": "MIT",
  "author": "Ahmed Dousa <aa.dousa@gmail.com>",
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
